datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// Users table
model User {
  id            Int      @id @default(autoincrement())
  googleId      Int
  name          String
  email         String
  verifiedEmail Boolean
  role          String
  picture       String
  locale        String
  updated_at    DateTime @default(now())
  created_at    DateTime @default(now())

  @@index([role])
}
